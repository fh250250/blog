#post-list
  margin-bottom 40px
  .post-item
    margin-bottom 30px
    &:last-child
      margin-bottom 0

    &-title
      margin-bottom 10px
      a
        font-size 25px
        color $black
        text-decoration none
        display inline-block
        &::after
          content ''
          display block
          width 0
          height 2px
          background $blue
          transition width 0.5s
        &:hover::after
          width 100%

    &-meta
      .date
        color $grey
      .tag
        text-decoration none
        color $green
        padding 5px
        border-radius 5px
        transition all 0.5s
        &:hover
          background $green
          color $white
