#side-bar
  position fixed
  top 0
  left 0
  width 200px
  height 100%
  &::after
    content ''
    display block
    position absolute
    right 0
    top 50px
    bottom 50px
    width 2px
    background $blue

  .menu
    text-align right
    padding-right 20px
    margin-top 50px
    .site-title
      margin-bottom 50px
      a
        font-size 25px
    li
      margin 10px 0
    a
      font-size 20px
      color $black
      text-decoration none
