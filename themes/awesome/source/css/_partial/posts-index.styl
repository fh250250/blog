.posts-index
  .post-item
    border-bottom 1px dashed #999
    margin-bottom 40px
    padding-bottom 40px
    &:last-child
      border-bottom none
      margin-bottom 0
    .title
      font-size 20px
      a
        position relative
        &:after
          content ''
          display block
          width 100%
          height 2px
          position absolute
          top 100%
          left 0
          background #333
    .meta
      margin-bottom 10px
      > div
        display inline-block
        margin-right 20px
        &:last-child
          margin-right 0
      .date
        color #999
    .excerpt
      margin-bottom 10px
    .tags
      a
        margin-right 10px
        padding 2px 10px
        border 1px solid #333
        border-radius 5px
        &:last-child
          margin-right 0
        .icon
          margin-right 5px
