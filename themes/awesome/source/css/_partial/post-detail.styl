.post-detail
  .post-title
    font-size 30px
    text-align center
  .post-meta
    text-align center
    margin-bottom 100px
    > div
      display inline-block
      margin-right 20px
      &:last-child
        margin-right 0
    .date
      color #555
    .tags
      a
        display inline-block
        margin-right 10px
        border-bottom 1px solid #999
        transition all .3s
        &:last-child
          margin-right 0
        &:hover
          border-bottom-color #333
        .icon
          margin-right 2px
  .post-content
    img
      max-width 100%
      height auto
      display block
      margin 0 auto
      box-shadow 0 0 10px 2px rgba(0, 0, 0, .5)



  &-entry
    h1, h2, h3, h4, h5, h6
      margin-bottom 20px
      border-bottom 1px solid $grey
      &::before
        content '# '
        color $green
        font-weight bold
    p, img, blockquote, figure, ul, ol
      margin 0 0 20px 0
      &:last-child
        margin-bottom 0
    h1
      font-size 24px
    h2
      font-size 20px
    h3, h4, h5, h6
      font-size 16px
    img
      max-width 100%
      height auto
      display block
      margin-left auto
      margin-right auto
      box-shadow 0 0 10px 2px rgba(0, 0, 0, .5)
    ol
      list-style decimal inside
    ul
      list-style disc inside
    a
      color $yellow
      text-decoration none
      transition all 0.5s
      &:hover
        text-shadow 0 0 10px
    code
      color $white
      background $blue
      padding 0 10px
      border-radius 5px
    blockquote
      padding 20px 20px 20px 40px
      border 2px solid $blue
      border-left 16px solid $blue
      p
        margin 0
      footer
        margin-top 30px
        font-style italic
        clearfix()
        cite
          float right
    .highlight
      background #474949
      color #d1d9e1
      padding 10px
      overflow-x auto
      figcaption
        clearfix()
        color $green
        margin-bottom 20px
        a
          float right
          color $green
      .gutter
        color #969896
        padding-right 20px
      .code
        .comment
        .quote
          color #969896
          font-style italic

        .keyword
        .selector-tag
        .literal
        .type
        .addition
          color #cc99cc

        .number
        .selector-attr
        .selector-pseudo
          color #f99157

        .string
        .doctag
        .regexp
          color #8abeb7

        .title
        .name
        .section
        .built_in
          color #b5bd68

        .variable
        .template-variable
        .selector-id
        .class .title
          color #ffcc66

        .section
        .name
        .strong
          font-weight bold

        .symbol
        .bullet
        .subst
        .meta
        .link
          color #f99157

        .deletion
          color #dc322f

        .formula
          background #eee8d5

        .attr
        .attribute
          color #81a2be

        .emphasis
          font-style italic
