#header
  display flex
  justify-content space-between
  align-items flex-end
  padding-bottom 10px
  margin-bottom 50px
  border-bottom 2px solid $blue
  .site-title a
    font-size 40px
    color $black
    text-decoration none
  .menu
    li
      display inline-block
    a
      color $black
      text-decoration none
      padding 5px
      font-size 16px
      border-radius 5px
      transition all 0.5s
      &:hover
        background $black
        color $white
